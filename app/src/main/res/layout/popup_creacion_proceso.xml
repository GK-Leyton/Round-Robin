<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:background="@drawable/rounded_text_field"
    android:layout_height="300dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        android:text="Tu nuevo Robin."
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtNombreProceso"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/rounded_white"
        android:ems="10"
        android:maxLength="9"
        android:hint="Nombre de tu proceso"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColorHint="#F26A6A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/txtRafagaProceso"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/rounded_white"
        android:ems="10"
        android:maxLength="2"
        android:hint="Rafaga de tu proceso"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:textColorHint="#F26A6A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreProceso" />


    <EditText
        android:id="@+id/txtTiempoLLegada"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/rounded_white"
        android:ems="10"
        android:maxLength="2"
        android:hint="Tiempo de llegada"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:textColorHint="#F26A6A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRafagaProceso" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#FFE4E1 "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icono_x" />

    <Button
        android:id="@+id/btnCrearRobin"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#F26A6A"
        android:text="Crear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRafagaProceso" />

    <Button
        android:id="@+id/btnCancelarCrearRobin"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#F26A6A"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRafagaProceso" />
</androidx.constraintlayout.widget.ConstraintLayout>